	     android:layout_height="wrap_content" >
  	    <TextView
          android:layout_width="wrap_content"
		  android:layout_height="wrap_content"
		  android:layout_marginTop="10dp"
		  android:textSize="20sp"
		  android:text="车    型:"
		  ></TextView>
      <TextView 
          android:id="@+id/carstyle1"
          android:layout_width="match_parent" 
          android:layout_height="30dp"
          android:layout_marginTop="10dp"
          android:textSize="20sp"
         
          ></TextView> 
